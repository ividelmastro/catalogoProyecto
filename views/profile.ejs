<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/logo-mercado-liebre.jpg" />

	<title> Tu Perfil | La Odisea Joyas</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/css/app.css">
</head>

<body>
	<% if (locals.user !=null) { %>
		<%- include('./partials/headerLogueado') %>
			<% } else{%>
				<%- include('./partials/headerGeneral') %>
					<% } %>


						<!-- Datos del usuario -->
						<section class="info-usuario container products-wrapper">
							<div class="row">
								<div class="img-container offset-3 col-2">
									<img src=<%="/images/users/" +usuario.profilePhoto%> alt="foto de perfil"
									class="foto-perfil">
								</div>
								<div class="data-container col-6">
									<div class="d-flex align-items-center ">
										<h1 class="main-title">
											<%= usuario.username %>
												<a href="/users/profile-edit">
													<i class="fas fa-cog"></i>
												</a>
										</h1>
									</div>
									<div>
										<ul class="">
											<li><%= usuario.products.length %> productos</li>
											<li><%= usuario.comments.length %>  comentarios</li>
										</ul>
									</div>
								</div>
							</div>
						</section>
						<!-- /Datos del usuario -->

						<!-- Mis productos -->
						<div class="container products-wrapper">
							<div class="row">
								<div class="col-12">
									<h2 class="products-title">Mis productos</h2>
								</div>
								<!-- Show mis productos -->

								<% for( let i=0 ; i< usuario.products.length; i++) { %>
									<div class="col-12 col-sm-6 col-lg-3">
										<section class="product-box">
											<a href="/products/item/<%= usuario.products[i].id %>">
												<figure class="product-box_image">
													<img src="<%= " /images/products/" + usuario.products[i].photoProduct %>"
													alt="imagen_producto">
												</figure>
												<article class="product-box_data">
													<h2>
														<%= usuario.products[i].nameProduct %>
													</h2>
													<p>
														<%= usuario.products[i].description %>
													</p>
												</article>
											</a>
										</section>
									</div>
									<% } %>



							</div>
						</div>

						<!-- footer -->
						<%- include('./partials/footer') %>

							<!-- /footer -->
</body>

</html>