<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/logo-mercado-liebre.jpg" />
	
	<!--<title> Mercado Liebre Argentina</title>-->
	<title><%= title%> </title>
			<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="./css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="./css/app.css">
</head>
<body>
	<% if (locals.user != null) { %>
		<%- include('./partials/headerLogueado')  %>
		<% } else{%>
		<%- include('./partials/headerGeneral')  %>
		<% } %>
	
	
	<!-- Banner -->
	<div class="banner">
		<img src="images/img-home-banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title"></h2>
			</div>

			<% for( let i = 0 ; i< lista.length; i++)  { %>    
				<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/item/<%= lista[i].id %>">
						<figure class="product-box_image">
							<img src=<%= lista[i].photoProduct %> alt="imagen_producto">
						</figure>
						<article class="product-box_data">
							<h2><%= lista[i].nameProduct %></h2>
							<p><%= lista[i].description %></p>
							<p><%= lista[i].comentario %></p>
						</article>
					</a>
				</section>
			</div>
			<% } %>
		</div>
	</div>

	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title"></h2>
					</div>
		
					<% for( let i = 0 ; i< lista.length; i++)  { %>    
						<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="products/item/<%= lista[i].id %>">
								<figure class="product-box_image">
									<img src=<%= lista[i].photoProduct %> alt="imagen_producto">
								</figure>
								<article class="product-box_data">
									<h2><%= lista[i].nameProduct %></h2>
									<p><%= lista[i].description %></p>
									<p><%= lista[i].comentario %></p>
								</article>
							</a>
						</section>
					</div>
					<% } %>
				</div>
			</div>
			
		</div>
	</div>

	<%- include('./partials/footer') %>

	
</body>	
</html>